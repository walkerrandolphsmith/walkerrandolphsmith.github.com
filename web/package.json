{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "analyze": "ANALYZE=true yarn workspace web build",
    "bundle": "concurrently \"yarn optimize:images\" \"yarn build:favicons\" \"yarn build:qr\" \"yarn build:app\"",
    "build": "yarn build:sequences && yarn bundle && yarn export:images && yarn package",
    "post:build": "ts-node --project ./tsconfig.build.json ./scripts/postBuild.ts",
    "build:app": "next build",
    "build:css": "@tailwindcss/cli -i ./src/app/globals.css -o ./src/app/generated.css --minify",
    "build:favicons": "ts-node --project ./tsconfig.build.json ./scripts/generateFavicons.ts",
    "build:qr": "ts-node --project ./tsconfig.build.json ./scripts/generateQRCode.ts",
    "export:images": "next-image-export-optimizer",
    "build:images": "yarn optimize:images && yarn build:favicons && yarn build:qr",
    "build:sequences": "ts-node --project ./tsconfig.build.json ./scripts/generateSequences.ts",
    "package": "ts-node --project ./tsconfig.build.json ./scripts/build.ts",
    "optimize:images": "ts-node --project ./tsconfig.build.json ./scripts/optimizeImages.ts",
    "start": "serve ./out",
    "lint": "next lint --fix",
    "upgrade": "yarn run @tailwindcss/upgrade"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "@mdx-js/react": "^3.1.0",
    "@next/bundle-analyzer": "^15.3.3",
    "@serwist/next": "^9.0.14",
    "@tailwindcss/cli": "^4.1.8",
    "@tailwindcss/postcss": "^4.1.8",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/upgrade": "^4.1.8",
    "autoprefixer": "10.4.14",
    "canvas": "^3.1.0",
    "contentlayer2": "^0.5.8",
    "developer-icons": "^6.0.0",
    "favicons": "^7.2.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "jsdom": "^26.1.0",
    "kbar": "^0.1.0-beta.45",
    "next": "13.4.6",
    "next-image-export-optimizer": "^1.8.1",
    "next-mdx-remote": "^5.0.0",
    "pliny": "^0.4.1",
    "postcss": "8.4.24",
    "qr-code-styling-node": "^1.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.5.2",
    "react-type-animation": "^3.1.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.3.1",
    "rehype-katex": "^7.0.1",
    "rehype-katex-notranslate": "^1.1.4",
    "rehype-preset-minify": "^7.0.1",
    "rehype-prism-plus": "^2.0.1",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-github-blockquote-alert": "^1.3.1",
    "remark-html": "^16.0.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.34.2",
    "shiki": "^3.4.2",
    "tailwindcss": "^4.1.8"
  },
  "devDependencies": {
    "@serwist/build": "^9.0.14",
    "@types/node": "20.3.1",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "concurrently": "^9.1.2",
    "crypto": "^1.0.1",
    "eslint": "8.42.0",
    "eslint-config-next": "13.4.6",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "exec": "workspace:*",
    "prettier": "^3.0.0",
    "serve": "14.2.0",
    "serwist": "^9.0.14",
    "ts-node": "^10.9.1",
    "typescript": "5.1.3"
  }
}
